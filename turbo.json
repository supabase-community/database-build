{
  "$schema": "https://turbo.build/schema.v2.json",
  "ui": "stream",
  "tasks": {
    "@database.build/deploy#build": {
      "dependsOn": ["^build"],
      "env": [],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@database.build/deploy-worker#dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "interruptible": true,
      "cache": false
    },
    "@database.build/deploy-worker#build": {
      "dependsOn": ["^build"],
      "env": ["SUPABASE_*"],
      "cache": false
    },
    "@database.build/browser-proxy#dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "interruptible": true,
      "cache": false
    },
    "@database.build/web#dev": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "persistent": true,
      "cache": true
    },
    "@database.build/web#build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_*",
        "OPENAI_*",
        "KV_*",
        "SUPABASE_*",
        "LOGFLARE_*",
        "REDIRECT_LEGACY_DOMAIN",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "FORCE_ASSET_CDN",
        "ASSET_CDN_S3_ENDPOINT",
        "SITE_NAME"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    }
  }
}
